<%- include('header'); %>

<div class="container">
	<div class="row">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h2 class="panel-title">轮播图</h2>
			</div>
			<div class="panel-body">
		    <form action="/admin/banners" method="post" class="form-horizontal">
		      <input type="hidden" name="_csrf" value="<%= locals.token %>"/>
			    <div class="form-group">
		        <label for="bannerName">轮播图名称</label>
		        <input type="text"
		        			id="bannerName"
		        			class="form-control"
		        			name="bannerName"
		        			required="required"/>
			    </div>
    	    <div class="form-group">
            <label for="bannerLink">轮播图链接</label>
            <input type="text"
            			id="bannerLink"
            			class="form-control"
            			name="bannerLink"
            			required="required"/>
    	    </div>
		    	<div class="form-group">
		        <label for="bannerPic">轮播图图片地址</label>
		        <input type="text" id="bannerPic" class="form-control" name="bannerPic" required="required"/>
		      </div>
		      <button type="submit" class="btn btn-default">提交</button>
		    </form>
			</div>
		</div>
		<div class="col-md-12">
		    <table class= "table table-bordered table-hover">
		        <thead>
		        <tr>
		            <th>轮播图名称</th>
		            <th>轮播图链接</th>
		            <th>轮播图顺序</th>
		            <th>操作</th>
		        </tr>
		        </thead>
		        <tbody>
		        <% if(banners[0]) { %>
		        <% banners.forEach(function(banner) { %>
		        <tr>
		            <td><%= banner.bannerName %></td>
		            <td><%= banner.bannerLink %></td>
		            <td><%= banner.bannerIndex %></td>
		            <td>
		                <form action="/admin/banners/<%= banner._id %>" method="post">
		                    <input type="hidden" name="_csrf" value="<%= locals.token %>"/>
		                    <button type="submit" class="btn btn btn-danger">删除</button>
		                </form>
		            </td>
		        </tr>
		        <% }) %>
		        <% } else { %>
		        <tr>
		            <td colspan="3">暂无课程</td>
		        </tr>
		        <% } %>
		        </tbody>
		    </table>
		</div>
	</div>
</div>